
<%= simple_form_for(@sorting_exercise) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div>
      <%= f.label :content, style: "display: block" %>
      <%#= form.text_area :content %>
      <div data-controller="tinymce">
        <%= f.text_area :content, class: "tinymce-textarea", data: {"tinymce-target": "textarea"} %>
      </div>
    </div>
    <%#= f.input :content %>
    <%= f.input :solution %>
    <%= f.select :slide_id, Slide.all.map {|slide| [slide.content, slide.id]}, {include_blank: true}, {class: "form-select"}  %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
