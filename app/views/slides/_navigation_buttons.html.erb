<% total_slides_count = slide.course.slides.count %>
<% slide_sort = slide.sort + 1 %>
<div data-course-target="previousSlideId" data-value="<%= slide.previous_slide_id %>">
</div>
<div data-course-target="nextSlideId" data-value="<%= slide.next_slide_id %>">
</div>

<div class="my-2 text-center">
  <button data-action="click->course#getPreviousSlide" class="<%= "disabled" if slide.previous_slide_id < 0 %> action-button-green-color">
    Zurück
  </button>

  <%= slide_sort %> / <%= total_slides_count %>

  <button data-action="click->course#getNextSlide" class="<%= "disabled" if slide.next_slide_id < 0 %> action-button-green-color">
    Weiter
  </button>
   |
   <!-- Button trigger modal -->
<button type="button" class="btn btn-secondary bi bi-list" data-bs-toggle="modal" data-bs-target="#settingsModal">
</button>

<!-- Modal -->
<div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="settingsModalLabel">Menü</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

</div>
