<%= raw slide.content %>

<% if policy(slide).update? %>
  <hr />
  <div>

    <div class="d-grid gap-2">
      <%= link_to "Edit this slide", edit_slide_path(slide), class: "btn btn-primary" %>
      <%= link_to "Back to slides", slides_path, class: "btn btn-primary" %>
      <%= link_to "Back to course", course_path(slide.course, slide_id: slide), class: "btn btn-primary" %>
      <%= button_to "Destroy this slide", slide, method: :delete, class: "btn btn-danger" %>
    </div>

    <hr />

    <div class="d-grid gap-2">
      <%= link_to "add quiz", new_quiz_path(slide_id: slide), class: "btn btn-primary" %>
      <%= link_to "add checkbox_exercise", new_checkbox_exercise_path(slide_id: slide), class: "btn btn-primary" %>
      <%= link_to "add open_question", new_open_question_path(slide_id: slide), class: "btn btn-primary" %>
      <%= link_to "add cloze", new_cloze_path(slide_id: slide), class: "btn btn-primary" %>
      <%= link_to "add cost_benefit_analysis", new_cost_benefit_analysis_path(slide_id: slide), class: "btn btn-primary" %>


    </div>
  </div>
<% end %>
