<%= raw slide.content %>

<% if policy(slide).update? %>
  <hr />
  <div>
    <%= link_to "Edit this slide", edit_slide_path(slide) %> |
    <%= link_to "Back to slides", slides_path %> |
    <%= link_to "Back to course", course_path(slide.course, slide_id: slide) %>
    <%= button_to "Destroy this slide", slide, method: :delete %>
    <hr />

    <div class="d-grid gap-2">

      <%= link_to "add quiz", new_quiz_path(slide_id: slide), class: "btn btn-primary" %>
      <%= link_to "add checkbox_exercise", new_checkbox_exercise_path(slide_id: slide), class: "btn btn-primary" %>
    </div>


  </div>
<% end %>
