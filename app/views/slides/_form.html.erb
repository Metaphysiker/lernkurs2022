<%= form_with(model: slide) do |form| %>
  <% if slide.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(slide.errors.count, "error") %> prohibited this slide from being saved:</h2>

      <ul>
        <% slide.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%#= form.text_area :content %>

    <div data-controller="tinymce">
      <%= form.text_area :content, class: "tinymce-textarea", data: {"tinymce-target": "textarea"} %>
    </div>
    <br>
    <%= form.select :course_id, Course.all.map {|course| [course.name, course.id]}, {include_blank: true}, {class: "form-select"}  %>
    <br>
    <%= form.label :save_progress, style: "display: block" %>

    <%= form.select :save_progress, Slide.save_progress_options.map {|option| [option, option]}, {include_blank: false}, {class: "form-select"}  %>
    <br>
    <%= form.label :course_complete, style: "display: block" %>

    <%= form.select :course_complete, Slide.course_complete_options.map {|option| [option, option]}, {include_blank: false}, {class: "form-select"}  %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
