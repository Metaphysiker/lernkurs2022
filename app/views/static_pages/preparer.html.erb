<%= tinymce_assets %>
<%= tinymce %>
<div class="container">
  <h1>Preparer</h1>

  <div class="row">
      <div class="col-6">
        <%= form_for :search_inputs, url: "/static_pages/preparer", method: :post, data: { turbo: false } do |form| %>
          <%#= form.text_area :text %>
          <%= form.text_area :text, :class => "tinymce", :rows => 40, :cols => 120 %>
          <br />
          <%= form.submit "Vorbereiten" %>
        <% end %>
      </div>
      <div class="col-6">
        <br /><br />
        <br /><br />
        <%#= raw @result %>
        <div>
          <%= raw @result %>
        </div>
      </div>
      <div class="col-12 rounded border bg-light">
        <%= @result %>
      </div>
  </div>
</div>
