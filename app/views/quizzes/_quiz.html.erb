<div class="container">
  <div id="<%= dom_id quiz %>">
    <p class="text-center">
      <%= quiz.content %>
    </p>

    <% if policy(QuizQuestion.new).create? %>
      <div>
        <p>
          <%= link_to "New quiz question", new_quiz_question_path(quiz_id: quiz) %>
        </p>

        <p>
          <%= link_to "Back to course", course_path(quiz.slide.course, slide_id: quiz.slide) %>
        </p>
      </div>
    <% end %>

    <div data-controller="quiz">
      <% quiz.quiz_questions.each do |quiz_question| %>
      <div class="d-grid gap-2">
        <button data-quiz-target="button" data-action="click->quiz#check" data-quiz-quiz-question-correct-answer-param="<%= quiz_question.correct_answer %>" data type="button" class="quiz-button "><%= quiz_question.content %> - <%= quiz_question.correct_answer %></button>
      </div>
      <% end %>


      <span data-quiz-target="output">
      </span>
    </div>

  </div>
</div>
