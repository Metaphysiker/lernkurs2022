  </div>

  <div>
    <%= form.label :alt_text, style: "display: block" %>
    <%= form.text_area :alt_text %>
  </div>

  <div>
    <%= form.label :file, style: "display: block" %>
    <%= form.file_field :file %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
