<div class="card">
  <div class="card-body">
    <h4 class="card-title"><%= course.name %></h4>
    <hr>
    <p class="card-text">
      <%= course.description %>
    </p>
    <hr>
    <p class="card-text">
      <strong>Dauer: </strong>20 Minuten
    </p>
  </div>
  <div class="card-footer border-top bg-light">
    <%= link_to "Loslegen!", course_path(course), class: "action-button-green-color" %>

  </div>
</div>
